<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WalletLaunchActivity"
    android:padding="40dp"

    >


    <TextView
        android:id="@+id/Hello_textView"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_gravity="center_horizontal"

        android:text="@string/HelloText"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Amount_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AmountText"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="25dp"
        android:text="@string/amountValue" />

    <Button
        android:id="@+id/Transfer_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/transfer_button"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Topup_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:text="@string/TopUp_button"
        android:textAllCaps="false" />

</LinearLayout>